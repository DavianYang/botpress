{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "es5",
    "lib": ["es7", "dom"],
    "jsx": "react",
    "typeRoots": ["./node_modules/@types", "src/web/typings.d.ts"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/web/*"],
      "DOCS/*": ["../../../docs/guide/docs/*"],
      "common/*": ["../../../out/bp/common/*"],
      "botpress/shared": ["../../bp/ui-shared/src/typings.d.ts"],
      "botpress/sdk": ["../../bp/sdk/botpress.d.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "build", "dist", "example", "rollup.config.js", "webpack.config.js"]
}
